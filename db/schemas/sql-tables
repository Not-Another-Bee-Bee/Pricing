CREATE UNLOGGED TABLE agents (
  aid int GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
  first_name VARCHAR(30),
  last_name VARCHAR(30),
  role VARCHAR(30),
  phone VARCHAR(30),
  profile_img VARCHAR(200),
  reviews_count INT,
  recent_sales INT,
  property_id INT[] DEFAULT ARRAY[]::INT[]
);

CREATE UNLOGGED TABLE properties (
  pid int GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
  price INT,
  beds INT,
  baths FLOAT(2),
  sqft INT,
  address VARCHAR(120),
  zip VARCHAR(5),
  city VARCHAR(30),
  state VARCHAR(2),
  status VARCHAR(30),
  tour_active BOOLEAN,
  owner_id INT REFERENCES agents(aid),
  agent_id INT[] DEFAULT ARRAY[]::INT[]
);



// index optimization

CREATE INDEX ON properties
  USING brin ()